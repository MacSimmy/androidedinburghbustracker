<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/preferences_category_autorefresh">
        <CheckBoxPreference
            android:key="pref_autorefresh_state"
            android:title="@string/preferences_category_autorefresh"
            android:summary="@string/preferences_checkbox_autorefresh_summary"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/preferences_category_database">
        <CheckBoxPreference
            android:key="pref_database_autoupdate"
            android:title="@string/preferences_checkbox_database_autoupdate"
            android:summary="@string/preferences_checkbox_database_autoupdate_summary"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/preferences_category_server">
        <EditTextPreference
            android:key="pref_server_hostname"
            android:title="@string/preferences_textbox_hostname"
            android:summary="@string/preferences_textbox_hostname_summary"
            android:defaultValue="bustracker.selfip.org"
            android:dialogTitle="@string/preferences_textbox_hostname_dialog" />
        <EditTextPreference
            android:key="pref_server_port"
            android:title="@string/preferences_textbox_port"
            android:summary="@string/preferences_textbox_port_summary"
            android:defaultValue="4876"
            android:dialogTitle="@string/preferences_textbox_port_dialog"
            android:numeric="integer" />
    </PreferenceCategory>
</PreferenceScreen>