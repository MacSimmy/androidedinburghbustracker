<resources>
    <style name="MainActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#990000</item>
        <item name="android:titleTextStyle">@style/MainActionBarText</item>
    </style>
    
    <style name="MapActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#90000000</item>
    </style>
    
    <style name="MainActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFF</item>
    </style>
    
    <style name="BusStopDetailsButtons">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>